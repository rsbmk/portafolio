---
import SectionContainer from "@/components/SectionContainer.astro";
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <div class="space-y-24">
    <SectionContainer id="experiencia-jelou" class="py-16 md:py-36">
      <h1 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
        {frontmatter.title}
      </h1>
      <div
        class="space-y-4 mt-6 text-xl text-gray-800 dark:[&_strong]:text-yellow-200 [&_strong]:text-yellow-500 [&_strong]:font-semibold dark:text-gray-300"
      >
        <slot />
      </div>
    </SectionContainer>
  </div>
</Layout>
