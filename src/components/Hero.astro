import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import GitHubIcon from "@/components/icons/GitHub.astro";
import SocialPill from "@/components/SocialPill.astro";
import { personalImageAlt } from "@/components/constants";
import Paragraph from "./Paragraph.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img class="rounded-full shadow-lg object-cover size-20" src="/rsbmk2.webp" alt={personalImageAlt} />
    <a href="https://linkedin.com/in/rsbmk" target="_blank" rel="noopener" class="flex items-center transition md:justify-center md:hover:scale-105">
      <!-- <Badge>Disponible para trabajar</Badge> -->
    </a>
  </div>
  <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">Hola ✌️, soy Roberto</h1>
  <Paragraph>
    💻 Desarrollador de Software y Líder Técnico con más de <strong>5 años de experiencia</strong> transformando ideas en productos innovadores y de alto
    impacto.
  </Paragraph>
  <Paragraph> 🚀 Mi pasión es crear soluciones de calidad que no solo funcionen, sino que destaquen.</Paragraph>
  <Paragraph>
    ✨ Si buscas a alguien que combine pasión, habilidades técnicas y visión de futuro, <strong>¡soy la persona indicada!</strong>
  </Paragraph>

  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:bociomelors@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/rsbmk">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/rsbmk">
      <GitHubIcon class="size-4" />
      GitHub
    </SocialPill>
  </nav>
</div>
